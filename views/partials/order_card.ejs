<script>
    function increaseCounter(button) {
        let counterElement = button.previousElementSibling;
        let count = parseInt(counterElement.innerText);
        counterElement.innerText = count + 1;
    }
    
    function decreaseCounter(button) {
        let counterElement = button.nextElementSibling;
        let count = parseInt(counterElement.innerText);
        if (count > 0) {
            counterElement.innerText = count - 1;
        }
    }
    </script>
